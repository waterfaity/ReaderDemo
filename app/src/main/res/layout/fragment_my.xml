<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg_main"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                style="@style/touch_style_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/ic_launcher"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:textSize="16dp"
                        android:layout_height="wrap_content"
                        android:text="李明"
                        android:textColor="@color/color_text_normal"/>

                    <TextView
                        android:textSize="16dp"
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="二年级(1班)"
                        android:textColor="@color/color_text_normal"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/bg_style_white_shadow"/>

            <LinearLayout
                style="@style/touch_style_2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/report"/>

                <TextView

                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅读报告"
                    android:textColor="@color/color_text_normal"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/color_hint_text_normal"/>

            <LinearLayout
                style="@style/touch_style_2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/about_us"/>

                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于我们"
                    android:textColor="@color/color_text_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/color_hint_text_normal"/>

            <LinearLayout
                android:id="@+id/setting"
                style="@style/touch_style_2"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="16dp"
                    android:src="@mipmap/setting"/>

                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textColor="@color/color_text_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/color_hint_text_normal"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>